#include<iostream>
#include<cstring>
using namespace std;

int main(){
  int T;
  cin>>T;
  
  int *YN=(int*)malloc(sizeof(int)*T);
  char* brackets=(char*)malloc(sizeof(char)*51);
  
  for(int i=0;i<T;i++){
    YN[i]=0;
    cin>>brackets;
    int len = strlen(brackets);
    for(int j=0;j<len;j++){
      if(brackets[j]=='(')  YN[i]++;
      else if(brackets[j]==')') YN[i]--;
      if(YN[i]<0){
        YN[i]=-1;
        break;
      }
    }
    if(YN[i]==0) cout<<"YES"<<endl;
    else cout<<"NO"<<endl;
  }
  return 0;
}
